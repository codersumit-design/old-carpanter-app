{
  "expo": {
    "name": "Golens Carpenter",
    "slug": "notification-testing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "notificationtesting",
    "userInterfaceStyle": "automatic",
    "notification": {
      "icon": "./assets/images/notification.png", 
      "color": "#D32F2F"
      
  
    },
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.notify.testing",
      "infoPlist": {
        "NSCameraUsageDescription": "Golens Carpenter needs camera access to scan your installed device.",
        "NSPhotoLibraryUsageDescription": "Golens Carpenter needs access to photos to upload images from the gallery.",
        "NSLocationWhenInUseUsageDescription": "Golens Carpenter uses your location to improve nearby services.",
        "NSUserTrackingUsageDescription": "Golens Carpenter uses tracking for personalized notifications.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "supportsTablet": true
    },
    "android": {
      "package": "com.notify.testing",
      "googleServicesFile": "google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "NOTIFICATIONS",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e0f2c5ee-c480-4b39-a30f-6bbf4d595053"
      }
    }
  }
}
